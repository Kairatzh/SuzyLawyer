# Telegram Bot Configuration
# Получить токен у @BotFather в Telegram
BOT_TOKEN=your_telegram_bot_token_here

# Together AI Configuration
# Получить API ключ на https://together.ai/
TOGETHER_API_KEY=your_together_api_key_here

# FastAPI Configuration
FASTAPI_HOST=http://localhost:8000
FASTAPI_PORT=8000

# RAG System Configuration
# Путь к PDF файлу с законодательством (относительно корня проекта)
PDF_PATH=src/datasets/kodeks.pdf

# Путь для сохранения векторной базы данных
VECTOR_STORE_PATH=src/vectordb

# Модели для RAG системы
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
LLM_MODEL=meta-llama/Llama-3.3-70B-Instruct-Turbo

# Параметры обработки документов
CHUNK_SIZE=1000
CHUNK_OVERLAP=150

# Логирование
LOG_LEVEL=INFO

# Docker Configuration (опционально)
DOCKER_IMAGE_NAME=suzy-lawyer
DOCKER_CONTAINER_NAME=suzy-lawyer-app
